(require 'ibuf-ext)

(define-ibuffer-filter marked-buffers
    "Limit current view to marked buffers"
  (:description "marked buffers"
                :reader nil)
  (let ((bufs (ibuffer-get-marked-buffers)))
    (member buf bufs)))

